{
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/game/assets/js/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!game/).*)",
      "destination": "/index.html"
    }
  ]
}
